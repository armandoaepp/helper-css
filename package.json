{
  "name": "helper-css-light",
  "version": "2.4.6",
  "description": "css classes of help for fronend",
  "main": "gulpfile.js",
  "scripts": {
    "clean": "rimraf vendor",
    "vendor": "vendor-copy",
    "helper": "node-sass scss/helper-css.scss css/helper-css.css",
    "helper-min": "node-sass scss/helper-css.scss css/helper-css.min.css  --output-style compressed",
    "helper-bootstrap": "node-sass scss/helper-bootstrap.scss css/helper-bootstrap.css",
    "helper-bootstrap-min": "node-sass scss/helper-bootstrap.scss css/helper-bootstrap.min.css  --output-style compressed",
    "start": "webpack --config webpack.config.js",
    "dev": "npm run vendor & npm run helper & npm run helper-bootstrap",
    "prod": "npm run vendor & npm run helper-min & npm run helper-bootstrap-min"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/armandoaepp/helper-css-light.git"
  },
  "keywords": [
    "helper-css-light"
  ],
  "author": "@armandoaepp",
  "license": "ISC",
  "bugs": {
    "url": "https://github.com/armandoaepp/helper-css-light/issues"
  },
  "homepage": "https://github.com/armandoaepp/helper-css-light#readme",
  "dependencies": {
    "bootstrap": "^4.2.1"
  },
  "devDependencies": {
    "node-sass": "^4.11.0",
    "rimraf": "^2.6.2",
    "sass-loader": "^7.1.0",
    "vendor-copy": "^2.0.0",
    "webpack": "^4.27.1",
    "webpack-cli": "^3.1.2"
  },
  "vendorCopy": [
    {
      "from": "node_modules/bootstrap/scss",
      "to": "vendor/bootstrap/scss"
    }
  ]
}
