{
  "name": "helper-css-light",
  "version": "2.3.4",
  "description": "css classes of help for fronend",
  "main": "gulpfile.js",
  "scripts": {
    "preinstall": "rimraf vendor",
    "postinstall": "vendor-copy",
    "start": "webpack --config webpack.config.js",
    "dev": "node-sass scss/helper-css.scss css/helper-css.css --importer=node_modules/node-sass-tilde-importer",
    "prod": "node-sass scss/helper-css.scss css/helper-css.min.css  --output-style compressed",
    "dev-b": "node-sass scss/helper-bootstrap.scss css/helper-bootstrap.css",
    "prod-b": "node-sass scss/helper-bootstrap.scss css/helper-bootstrap.min.css  --output-style compressed"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/armandoaepp/helper-css-light.git"
  },
  "keywords": [
    "helper-css-light"
  ],
  "author": "@armandoaepp",
  "license": "ISC",
  "bugs": {
    "url": "https://github.com/armandoaepp/helper-css-light/issues"
  },
  "homepage": "https://github.com/armandoaepp/helper-css-light#readme",
  "dependencies": {
    "bootstrap": "^4.1.3",
    "rebuild": "^0.1.2",
    "rimraf": "^2.6.2",
    "vendor-copy": "^2.0.0"
  },
  "devDependencies": {
    "node-sass": "^4.9.3",
    "sass-loader": "^7.1.0",
    "webpack": "^4.19.1",
    "webpack-cli": "^3.1.0"
  },
  "vendorCopy": [
    {
      "from": "node_modules/boostrap",
      "to": "vendor/boostrap"
    }
  ],

}
